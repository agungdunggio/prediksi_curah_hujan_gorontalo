---
// src/components/sections/Hero.astro
import HeroAnimation from "../react/animation/HeroAnimation.jsx";
---
<section class="relative overflow-hidden">
    <!-- VANTA BACKGROUND -->
    <div id="vanta-bg" class="absolute top-0 left-0 w-full h-full z-[-1] opacity-60"></div>

    <HeroAnimation client:load />

    <!-- NAVIGATION -->
    <nav class="container mx-auto px-6 py-4 relative z-10">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <span class="text-xl font-bold text-white">Hydro<span class="gradient-text">Vision</span></span>
            </div>
        </div>
    </nav>

    <!-- HERO CONTENT -->
    <div class="h-screen flex items-center justify-center relative z-10 -mt-16">
        <div class="container mx-auto px-6">
            <div class="flex flex-col items-center text-center">
                <h1 class="hero-title opacity-0 translate-y-10 text-xl md:text-5xl font-bold mb-6 max-w-3xl">
                    <span class="glow">Prediksi Curah Hujan Gorontalo</span> <br>
                    <span class="gradient-text">via API LSTM</span>
                </h1>
                <p class="hero-desc opacity-0 translate-y-10 text-sm md:text-base text-gray-300 mb-10 max-w-2xl">
                    POST <code>/api/v1/predict</code> dengan <code is:raw>{ "n_days": 7 }</code> → dapat JSON prediksi hujan harian siap dipakai.
                </p>            
                <div class="hero-buttons flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                    <a href="#api" class="opacity-0 translate-y-10 bg-gradient-to-r from-blue-500 to-cyan-500 text-white font-semibold px-8 py-3 rounded-full transition-all duration-300 ease-in-out hover:-translate-y-0.5 hover:shadow-lg hover:shadow-cyan-500/30">
                        Lihat Dokumentasi API
                    </a>
                    <a href="#demo" class="opacity-0 translate-y-10 bg-transparent border border-blue-400 text-blue-400 font-semibold px-8 py-3 rounded-full hover:bg-blue-400 hover:bg-opacity-10 transition">
                        Coba Demo Langsung
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- BOUNCE TO FEATURES -->
    <!-- <div class="absolute bottom-10 left-0 right-0 flex justify-center z-10">
        <a href="#features" class="animate-bounce">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </a>
    </div> -->
</section>

<!-- TRANSISI HALUS KE BAGIAN BAWAH -->



<!-- SCRIPT VANTA -->
<script is:inline>
    window.addEventListener('load', () => {
        if (typeof window !== 'undefined' && window.VANTA && window.THREE) {
            window.VANTA.NET({
                el: "#vanta-bg",
                THREE: window.THREE,
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 200.00,
                minWidth: 200.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x3b82f6,
                backgroundColor: 0x0,
                points: 12.00,
                maxDistance: 22.00,
                spacing: 18.00
            });
        } else {
            console.error('❌ Vanta.js or Three.js did not load correctly.');
        }
    });
</script>

<style>
    .glow {
        text-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
    }
</style>
